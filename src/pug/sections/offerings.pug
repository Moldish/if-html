mixin offerings
  section.offerings
    .container
      h2.title What do we offer
      .offerings__row.content
        .offerings__col.col-4
          .offerings__img
            svg.offerings__svg(width='76', height='92')
              use(href='#headset')
          span.offerings__caption Support 24/7
        .offerings__col.col-4
          .offerings__img
            svg.offerings__svg(width='84', height='84')
              use(href='#chat')
          span.offerings__caption Communicate directly
        .offerings__col.col-4
          .offerings__img
            svg.offerings__svg(width='100', height='68')
              use(href='#booking')
          span.offerings__caption Book online
        .offerings__col.col-4
          .offerings__img
            svg.offerings__svg(width='92', height='84')
              use(href='#reviews')
          span.offerings__caption Real guest reviews
